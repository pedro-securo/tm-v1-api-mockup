{
  "priority": 1,
  "request": {
    "urlPath": "/v3.0/response/emails/restore",
    "method": "POST",
    "bodyPatterns": [
      {
        "matchesJsonPath": "$[?(@.messageId == 'server_error')]"
      }
    ]
  },
  "response": {
    "status": 500,
    "transformers": [
      "response-template"
    ],
    "jsonBody": {
        "error": {
          "code": "InternalServerError",
          "message": "Internal server error."
        }
      },
    "headers": {
      "Content-Type": "application/json"
    }
  }
}
